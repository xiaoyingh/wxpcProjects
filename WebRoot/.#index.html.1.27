	        $.ajax({
				type: 'post',
				url: 'message/addInformPlan',
				data: data,
				dataType: 'json',
				success: function(msg){
				    if(msg.status == 1){
                        alert("恭喜您 添加成功。。。");
                        console.log(data);
                        $('.fileNav .libg').eq(0).click();
                        $('#myModal').modal('hide');
					}
				}
			});

		}else if(dataType == 'ation'){
            $.ajax({
                type: 'POST',
                url: 'message/addActionPlan',
                data: data,
                dataType: 'json',
                success: function(msg){
                    if(msg.status == 1){
                        alert("恭喜您 添加成功。。。");
                        $('#myModal').modal('hide');
                        $('.fileNav .libg').eq(1).click();
