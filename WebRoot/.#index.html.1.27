	function sendSubmit(){
	    var dataType = $('.addBtn').attr('data-type');
        var personsId = $("input:checkbox[name='name']:checked").map(function(index,elem) {
            return $(elem).attr('data-personid');
        }).get().join(',');
        var title = $('.notice_t').val();
        var content = $('.notice_con').val();
        var data = {
            "uid": userId,
            "title": title,
			"content": content,
			"type": 1,
			"toUid": personsId,
			"url": ''
		};
